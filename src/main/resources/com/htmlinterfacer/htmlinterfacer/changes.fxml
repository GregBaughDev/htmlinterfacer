<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.web.WebView?>

<GridPane fx:controller="com.htmlinterfacer.htmlinterfacer.controller.ChangesController" xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER" hgap="10" vgap="10" prefHeight="800" prefWidth="1000">

    <VBox GridPane.columnIndex="0" GridPane.columnSpan="4" fx:id="changedBox" >
        <Text text="Changed files"></Text>
        <Button text="Commit changes"></Button>
        <Button fx:id="switchBtn" text="View file list" onAction="#switchView"></Button>
    </VBox>

    <VBox GridPane.columnIndex="4" GridPane.columnSpan="4">
        <WebView prefHeight="800" fx:id="changeView"></WebView>
    </VBox>

</GridPane>